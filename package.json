{
  "name": "postjss",
  "version": "0.0.8",
  "description": "Use PostCSS with JSS",
  "scripts": {
    "clean": "rm -rf lib/*",
    "lint": "eslint src",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "prebuild": "npm run clean && npm run test:coverage && npm run lint",
    "build": "babel src --out-dir lib --ignore tests && copyfiles ./*.* -a -f lib",
    "preversion": "npm run build",
    "postversion": "git push --follow-tags && npm publish"
  },
  "repository": "https://github.com/lttb/postjss.git",
  "author": "lttb <connect@lttb.net>",
  "license": "MIT",
  "dependencies": {
    "babel-root-import": "^4.1.8",
    "babel-template": "^6.23.0",
    "babel-types": "^6.23.0",
    "deasync": "^0.1.9",
    "escape-string-regexp": "^1.0.5",
    "postcss": "^5.2.14",
    "postcss-js": "^0.3.0",
    "postcss-load-config": "^1.2.0",
    "ramda": "^0.23.0",
    "resolve-from": "^2.0.0",
    "strip-indent": "^2.0.0",
    "sugarss": "^0.2.0"
  },
  "devDependencies": {
    "@lttb/configs.style": "lttb/configs#style",
    "@lttb/eslint-config-default": "https://github.com/lttb/configs#js",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-plugin-async-to-promises": "^1.0.5",
    "babel-plugin-transform-async-to-generator": "^6.22.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-stage-3": "^6.22.0",
    "copyfiles": "^1.2.0",
    "eslint": "^3.13.0",
    "jest": "^18.1.0",
    "js-combinatorics": "^0.5.2",
    "postcss-advanced-variables": "^1.2.2",
    "postcss-custom-properties": "^5.0.2",
    "postcss-custom-selectors": "^3.0.0",
    "postcss-import": "^9.1.0",
    "postcss-mixins": "^5.4.1",
    "postcss-reporter": "^3.0.0",
    "stylelint": "^7.9.0"
  },
  "jest": {
    "rootDir": "src"
  }
}
